{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "cmake --build .",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": "absolute"
            }
        },
        {
            "label": "install",
            "type": "shell",
            "group": {
                "kind": "build"
            },
            "command": "cmake --build . --target install",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": "absolute"
            }
        },
        {
            "label": "test",
            "type": "shell",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "command": "cmake --build . --target test",
            "options": {
                "cwd": "${workspaceRoot}/build"
            }
        }
    ]
}
